import os
from dotenv import load_dotenv

def load_config():
    load_dotenv()  # Load environment variables from .env file
    
    return {
        "API_KEY": os.getenv("ROLLBIT_API_KEY"),
        "SECRET_KEY": os.getenv("ROLLBIT_SECRET_KEY"),
        "MAX_TRADES": int(os.getenv("MAX_TRADES", 5)),
        "RSI_THRESHOLD": float(os.getenv("RSI_THRESHOLD", 30)),
        "TAKE_PROFIT_ROI": float(os.getenv("TAKE_PROFIT_ROI", 5)),
        "STOP_LOSS_ROI": float(os.getenv("STOP_LOSS_ROI", -2)),
        "REFRESH_INTERVAL": int(os.getenv("REFRESH_INTERVAL", 10)),  # Refresh interval in seconds
    }
